
@{
    ViewData["Title"] = "Edit Buckets";
    ViewData["PageHeader"] = "Change My Buckets";
}

<form method="post" class="card">
    <div class="card-header">
        <h3 class="card-title">Select Buckets</h3>
    </div>
    <div class="card-body ">
        <div class="form-group">
            <div class="form-group">
                <label class="form-label">Bucket list</label>
                <select class="form-control select2" data-placeholder="Choose Browser" multiple>
                    <option value="Technology">
                        Technology
                    </option>
                    <option value="Automobile">
                        Automobile
                    </option>
                    <option value="Furniture">
                        Furniture
                    </option>
                    <option value="Raw Material">
                        Raw Material
                    </option>
                    <option value="Software">
                        Software
                    </option>
                </select>
            </div>
        </div>
        <div class="card-footer text-right">
            <div class="d-flex">
                <a href="@Url.Action("Buckets")" class="btn btn-link">Cancel</a>
                <button type="submit" class="btn btn-primary ml-auto">Update Bucket</button>
            </div>
        </div>
    </div>
</form>

@section Style{ 

    <!-- select2 Plugin -->
    <link href="~/Template2/assets/plugins/select2/select2.min.css" rel="stylesheet" />
    <!-- file Uploads -->
    <link href="~/Template2/assets/plugins/fileuploads/css/dropify.min.css" rel="stylesheet" type="text/css" />
}

@section Scripts{ 

    <!--Select2 js -->
    <script src="~/Template2/assets/plugins/select2/select2.full.min.js"></script>
    <!-- Inline js -->
    <script src="~/Template2/assets/js/select2.js"></script>
    <!-- file uploads js -->
    <script src="~/Template2/assets/plugins/fileuploads/js/dropify.min.js"></script>
}

