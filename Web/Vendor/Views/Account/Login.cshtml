@model Vendor.ViewModels.LoginView
@{
    ViewBag.Title = "Log In";
    Layout = "~/Views/Shared/_Authentication.cshtml";
}

@if (!string.IsNullOrEmpty(ViewBag.Response))
{
    <script type="text/javascript">
        alert("@ViewBag.Response");
        // var url = '@Url.Action("Login")';
        //window.location.href = url;
    </script>
}


@using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <form class="login100-form validate-form">
        
        <div class="wrap-login100">
            <span class="login100-form-title">
                <img src="~/Content/Images/User_Login.png" style="width: 150px; height: 150px; opacity: 0.2; filter: alpha(opacity=30);" />
            </span>
            <div class="wrap-input100 validate-input" data-validate="Valid email is required: ex@abc.xyz">
                @Html.TextBoxFor(m => m.UserID, new { @class = "input100", @placeholder = "User ID" })
                <span class="focus-input100"></span>
                <span class="symbol-input100">
                    <i class="fa fa-user" aria-hidden="true"></i>
                </span>
            </div>

            <div class="wrap-input100 validate-input" data-validate="Password is required">
                @Html.PasswordFor(m => m.Password, new { @class = "input100", @placeholder = "Password" })
                <span class="focus-input100"></span>
                <span class="symbol-input100">
                    <i class="fa fa-lock" aria-hidden="true"></i>
                </span>
            </div>

            <div class="container-login100-form-btn">
                <button class="login100-form-btn">
                    Login
                </button>
            </div>
            <div class="text-center p-t-12">
                @*<span class="txt1">
                Forgot
            </span>*@
                <a class="txt2" href="#">
                    <a href="@Url.Action("Signup", "Account")"> Create Account</a> OR <a href="@Url.Action("ForgetPassword", "Account")"> Forget Password</a>
                </a>
            </div>

        </div>
    </form>
 }
